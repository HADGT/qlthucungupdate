@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Quên mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/cssSecurity/style.css" rel="stylesheet" />
<link href="~/Content/cssSecurity/style1.css" rel="stylesheet" />
<style>
    .header, footer, .go-to-top {
        display: none;
    }
</style>

<div class="container m-auto justify-content-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <div class="login-wrap py-3">
                    <form asp-action="ForgotPassword" asp-controller="RoleAdmin" method="post" class="form" id="form-forgot">
                        @Html.AntiForgeryToken()

                        <h3 class="text-center">Quên mật khẩu</h3>

                        @if (!ViewData.ModelState.IsValid)
                        {
                            @Html.ValidationSummary(false, "", new { @class = "alert-danger" })
                        }

                        @if (ViewBag.TempPassword != null)
                        {
                            <div class="alert alert-success text-center">
                                Mật khẩu mới của bạn là: <strong>@ViewBag.TempPassword</strong><br />
                                Vui lòng đăng nhập và thay đổi mật khẩu ngay.
                            </div>
                        }

                        <div class="form-group">
                            <div class="css-vivg1i e1xsindi4">
                                <label for="UserName" class="form-label col-form-label d-flex text-dark">
                                    <span class="pl-3">Tên tài khoản</span>
                                </label>
                                <input type="text" asp-for="UserName" class="form-control" />
                            </div>
                            <span class="form-message">
                                <span asp-validation-for="UserName" class="text-danger fa-2xs"></span>
                            </span>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn form-control rounded submit px-3 btn_login form-submit pt-1 pb-1">Lấy lại mật khẩu</button>
                        </div>

                        <div class="form-group dont-have-account text-center">
                            <a asp-controller="Security" asp-action="SignIn">Quay lại đăng nhập</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
