@model qlthucung.Models.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Quên mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/cssSecurity/style.css" rel="stylesheet" />
<link href="~/Content/cssSecurity/style1.css" rel="stylesheet" />
<style>
    .header, footer, .go-to-top {
        display: none;
    }
</style>

<div class="container m-auto justify-content-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <div class="login-wrap py-3 shadow-sm rounded bg-white">
                    <form asp-action="ForgotPassword" asp-controller="RoleAdmin" method="post" class="form" id="form-forgot">
                        @Html.AntiForgeryToken()

                        <h3 class="text-center mb-3">Quên mật khẩu</h3>

                        @if (!ViewData.ModelState.IsValid)
                        {
                            @Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })
                        }

                        <div class="form-group mb-3">
                            <label asp-for="UserName" class="form-label text-dark">Tên tài khoản</label>
                            <input asp-for="UserName" class="form-control" placeholder="Nhập tên tài khoản" required />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Email" class="form-label text-dark">Email</label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="Nhập email đăng ký" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <button type="submit" class="btn btn-primary w-100">Gửi yêu cầu</button>
                        </div>

                        <div class="form-group text-center">
                            <a asp-controller="Security" asp-action="SignIn">Quay lại đăng nhập</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
