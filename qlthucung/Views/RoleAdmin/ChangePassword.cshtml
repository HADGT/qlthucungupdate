@model qlthucung.Models.ChangePasswordViewModel
@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/cssSecurity/style.css" rel="stylesheet" />
<link href="~/Content/cssSecurity/style1.css" rel="stylesheet" />
<style>
    .header, footer, .go-to-top {
        display: none;
    }
</style>

<div class="container m-auto justify-content-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <div class="login-wrap py-3">
                    <form asp-action="ChangePassword" asp-controller="RoleAdmin" method="post" class="form" id="form-forgot">
                        @Html.AntiForgeryToken()

                        <h3 class="heading text-center">Thay đổi mật khẩu</h3>
                        @if (TempData["Success"] != null)
                        {
                            <div class="alert alert-success">@TempData["Success"]</div>
                        }
                        @if (TempData["Error"] != null)
                        {
                            <div class="alert alert-danger">@TempData["Error"]</div>
                        }
                        <div class="form-group">
                            <div class="css-vivg1i e1xsindi4">
                                <label for="UserName" class="form-label col-form-label d-flex text-dark" asp-for="NewPassword">
                                    <span class="pl-3">Tài khoản mới</span>
                                </label>
                                <input type="password" asp-for="NewPassword" class="form-control" />
                            </div>
                            <span class="form-message">
                                <span asp-validation-for="NewPassword" class="text-danger fa-2xs"></span>
                            </span>
                        </div>
                        <div class="form-group">
                            <div class="css-vivg1i e1xsindi4">
                                <label for="UserName" class="form-label col-form-label d-flex text-dark" asp-for="ConfirmPassword">
                                    <span class="pl-3">Xác nhận lại mật khẩu</span>
                                </label>
                                <input type="password" asp-for="ConfirmPassword" class="form-control" />
                            </div>
                            <span class="form-message">
                                <span asp-validation-for="ConfirmPassword" class="text-danger fa-2xs"></span>
                            </span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn form-control rounded submit px-3 btn_login form-submit pt-1 pb-1">Đổi mật khẩu</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
