@model SignIn

@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/cssSecurity/style.css" rel="stylesheet" />
<link href="~/Content/cssSecurity/style1.css" rel="stylesheet" />
<style>
    .header, footer, .go-to-top {
        display: none;
    }
</style>
<div class="container m-auto justify-content-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <div class="login-wrap">
                    <form asp-controller="Security" asp-action="SignIn" method="post" class="form" id="form-2" style="padding-bottom: 1px;">
                        @if (@TempData["LoginErr"] != null)
                        {
                            <div class="alert alert-danger">@TempData["LoginErr"]</div>
                        }
                        <h3 class="heading text-center">Đăng nhập</h3>
                        <div class="col-md-12 col-lg-12 col-sm-12 d-flex pt-2" style="position: relative;">
                            <div class="m-auto text-center div-light align-items-center w-100">
                                <span class="justify-content-between">Đăng nhập tài khoản</span>
                            </div>
                        </div>

                        @* <h4 class="text-danger">@ViewBag.msg</h4>
                        <h4 class="text-danger"> @ViewData["blockAccount"]</h4> *@

                        <div class="form-group" style="padding-top: 4rem;">
                            <div class="css-vivg1i e1xsindi4">
                                <label for="Fullname" class="form-label col-form-label d-flex text-dark">
                                    <span class="pl-3">Tên tài khoản</span>
                                </label>
                                <input type="text" asp-for="UserName" class="form-control" />
                            </div>
                            <span class="form-message">
                                <span asp-validation-for="UserName" class="text-danger fa-2xs"></span>
                            </span>
                        </div>

                        <div class="form-group">
                            <div class="css-vivg1i e1xsindi4">
                                <label for="password" class="form-label col-form-label d-flex text-dark">
                                    <span class="pl-3">Mật khẩu</span>
                                </label>
                                <input type="password" asp-for="Password" class="form-control" />
                            </div>
                            <span class="form-message">
                                <span asp-validation-for="Password" class="text-danger fa-2xs"></span>
                            </span>
                        </div>
                        <div class="form-group dont-have-account text-center">
                            <a class="account-register text-center" asp-controller="RoleAdmin" asp-action="ForgotPassword">Quên mật khẩu</a>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn form-control rounded submit px-3 btn_login form-submit pt-1 pb-1" value="Login" name="login_submit">Đăng nhập</button>
                        </div>
                        <div class="form-group dont-have-account text-center">
                            <span class="text-center">Bạn chưa có tài khoản?</span>
                            <a class="account-register text-center" asp-controller="Security" asp-action="Register">Đăng ký ngay</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>